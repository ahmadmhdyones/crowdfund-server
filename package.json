{
  "name": "crowdfund-server",
  "version": "1.0.0",
  "description": "Express server for serving APIs",
  "keywords": [
    "mongodb",
    "express.js",
    "node.js",
    "backend",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/amy-spu/crowdfund/crowdfund-server"
  },
  "bugs": {
    "url": "https://gitlab.com/amy-spu/crowdfund/crowdfund-server/issues"
  },
  "engines": {
    "node": "^14.20.0"
  },
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon .",
    "start:dev": "nodemon .",
    "start:prod": "NODE_ENV=production nodemon .",
    "data:import": "node seeder",
    "data:destroy": "node seeder -d"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "editorconfig": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "requirePragma": false,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "printWidth": 80
  }
}
